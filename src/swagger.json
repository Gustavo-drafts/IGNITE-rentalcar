    "paths": {
        "/categories": {
            "post": {
                "tags": ["Category"], 
                "summary": "Criar noca categoria",
                "description": "Criar nova categoria",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "description": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "name": "Categoria exemplo de nome",
                                    "description": "Categoria exemplo descrição"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    },
                    "500": {
                        "description": "Category already exists"
                    }
                }
            },
            "get": {
                "tags": ["Category"],
                "summary": "List all categories",
                "description": "List all categories",
                "responses": {
                    "200": {
                        "description": "Sucess",
                        "content" : {
                            "application/json": {
                                "schema": {
                                    "type":"array",
                                    "items": {
                                        "type":"object",
                                        "properties": {
                                            "name": {
                                                "type":"string"
                                            },
                                            "description": {
                                                "type": "string"
                                            }
                                        }
                                    }

                                }
                            }
                        }
                    }
                }
            }

        },
        "/specifications": {
            "post": {
                "tags": ["Specifications"],
                "sumary": "Create a specification",
                "description": "Create a new specification",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/definitions/Specification"
                            }
                        }
                    }
                },
                "responses":{
                    "201": {
                        "description": "Created"
                    },
                    "500": {
                        "description": "Specification already exists!"
                    }
                }
            }
        }
    },
    "definitions": {
        "Specification": {
            "type": "object",
            "properties": {
                "name": {
                    "type":"string"
                },
                "description": {
                    "type":"string"
                }
            }
        }
    }
}